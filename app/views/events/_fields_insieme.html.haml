- if entry.is_a?(Event::AggregateCourse)
  = field_set_tag do
    = f.labeled_number_field(:year)

- if entry.reportable?
  = field_set_tag Event::CourseRecord.model_name.human do
    #course_record_fields
      = f.fields_for(:course_record) do |nf|
        = nf.hidden_field(:id)
        = render 'event/course_records/main_fields', f: nf, sk: entry.leistungskategorie == 'sk', tp: entry.leistungskategorie == 'tp'
